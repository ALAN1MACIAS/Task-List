= form_with(model: task, local: true) do |form|
  .row
    - if task.errors.any?
      #error_explanation
        %h2 
          = pluralize(task.errors.count, "error")
          "prohibited this task from being saved:"
        %ul
          = task.errors.full_messages.each do |message|
            %li= message
    .col-md-12
      = form.label :title
      = form.text_field :title, class: "form-control"
    .col-md-12
      = form.label :body
      = form.text_area :body, class: "form-control"
    .col-md-12
      = form.label :lavel_importance
      = form.number_field :lavel_importance, class: "form-control"
    .col-md-12
      = form.label :status
      = form.text_field :status, class: "form-control"
    .col-md-12.mt-3
      = form.label :end_date
      = form.date_select :end_date, class: "form-control"
    .col-md-12
      = form.label :color
      = form.color_field :color, class: "form-control"
    .col-md-12.mt-4
      = form.submit "Actualizar", class: "btn btn-primary btn-sm"